/**
 * Implements hook_oembed_response_alter().
 */
function ombumedia_oembed_response_alter(&$response) {
  // Normalize keys.
  // - Replace dashes with underscores in key names.
  foreach (array_keys($response) as $key) {
    $value = $response[$key];
    unset($response[$key]);
    $key = str_replace('-', '_', $key);
    $response[$key] = $value;
  }
}

